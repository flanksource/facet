{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "title", "sections"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Report name used for output filename"
    },
    "title": {
      "type": "string",
      "description": "Report title displayed in the document"
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "content"],
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      }
    }
  }
}
