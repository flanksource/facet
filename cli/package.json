{
  "name": "facet",
  "version": "0.1.7",
  "type": "module",
  "description": "Generate PDF reports, HTML pages, and embeddable WebComponents from React templates",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "facet": "./dist/cli.mjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:lib": "tsdown",
    "build:cli": "bun build src/cli.ts --outfile=../dist/facet --compile --target=bun",
    "postbuild": "chmod +x ../dist/facet",
    "build": "npm run build:lib && npm run build:cli && npm run postbuild",
    "dev": "tsdown --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "pdf",
    "reports",
    "react",
    "typescript",
    "cli",
    "documentation",
    "webcomponents"
  ],
  "author": "Flanksource",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/flanksource/facet.git",
    "directory": "cli"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "bun": "^1.3.2",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "lightningcss": "^1.30.2",
    "ora": "^5.4.1",
    "puppeteer": "^22.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsdown": "^0.16.0",
    "typescript": "^5.6.3"
  }
}
